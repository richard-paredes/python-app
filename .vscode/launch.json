    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Backend",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload"
            ]
        },
        {
            "name": "Docker: Debug Backend",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
              "pathMappings": [
                {
                  "localRoot": "${workspaceFolder}/backend",
                  "remoteRoot": "/app"
                }
              ],
              "projectType": "fastapi"
            },
            "dockerServerReadyAction": {
              "action": "openExternally",
              "pattern": "Uvicorn running on (https?://\\S+|[0-9]+)",
              "uriFormat": "%s://localhost:%s/api/v1/openapi.json"
            }
          }
    ]
}