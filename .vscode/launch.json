    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Backend",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload"
            ]
        },
        {
            "name": "Docker-Compose: Debug Backend",
            "type": "debugpy",
            "request": "attach",
            "preLaunchTask": "docker-compose: up",
            "connect": {
              "port": 5678,
              "host": "localhost"
            },
            "pathMappings": [
              {
                "localRoot": "${workspaceFolder}/backend",
                "remoteRoot": "/app"
              }
            ],
            "justMyCode": true
        }
    ]
}