  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Backend",
      "type": "debugpy",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload"
      ],
      "envFile": "${workspaceFolder}/.env.local"
    },
    {
      "name": "Docker-Compose: Debug Backend",
      "type": "debugpy",
      "request": "attach",
      // "preLaunchTask": "docker-compose: up", // Need to run this one manually.
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/backend",
          "remoteRoot": "/app"
        }
      ]
    }
  ]
}