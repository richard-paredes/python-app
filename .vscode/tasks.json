{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "docker-run",
      "label": "docker-run: debug",
      "dependsOn": [
        "docker-compose: up"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "dockerRun": {
        "image": "spice-api:latest",
      }
    },
    {
      "type": "docker-compose",
      "label": "docker-compose: up",
      "dockerCompose": {
        "up": {
          "detached": true,
          "build": true
        },
        "files": [
          "${workspaceFolder}/docker-compose.debug.yml"
        ]
      }
    },
    {
      "type": "docker-build",
      "label": "docker-build",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "dockerBuild": {
        "tag": "spice-api:latest",
        "context": ".",
      }
    }
  ]
}